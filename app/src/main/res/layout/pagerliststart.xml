<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/relative1"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@+id/dishimage1"
            android:background="@drawable/whitebackground"
            android:text="20% off"
            android:textColor="#F44336"
            android:textStyle="bold"></TextView>


        <ImageView
            android:id="@+id/dishimage1"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/dishimage">

        </ImageView>

        <TextView
            android:layout_below="@id/dishimage1"
            android:id="@+id/dishnametiffin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Adisha Tiffn Service"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_below="@+id/dishnametiffin"
            android:id="@+id/hotelname1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Biryani,Lunchbox,kabab,muglahi"
            android:textColor="#7A7474"
            android:textSize="15dp"
            android:textStyle="normal">

        </TextView>

        <RatingBar
            android:id="@+id/rating"
            android:layout_below="@id/hotelname1"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="170dp"
            android:layout_height="32dp"
            android:numStars="5"></RatingBar>

        <TextView
            android:layout_below="@+id/rating"
            android:id="@+id/prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200 for once"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>



</RelativeLayout>