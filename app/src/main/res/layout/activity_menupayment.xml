<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menupayment">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/paymentpage"
        android:layout_below="@+id/paymenttab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/paymenttab"
        android:layout_width="match_parent"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/black"
        app:tabIconTint="@color/cardview_dark_background"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"></com.google.android.material.tabs.TabLayout>

    <RelativeLayout
        android:id="@+id/totalprise"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Total"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            ></TextView>
        <TextView
            android:id="@+id/prise"
            android:layout_toRightOf="@+id/total"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="$900"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            ></TextView>

        <Button
            android:id="@+id/continuebutton"
            android:layout_width="213dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/squareorange"
            android:gravity="center"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"></Button>


    </RelativeLayout>



</RelativeLayout>