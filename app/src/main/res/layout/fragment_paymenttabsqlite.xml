<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".paymenttabsqlite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Paymet option"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credit or Debit card"></RadioButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paymentrecy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:visibility="gone"
                    android:id="@+id/addbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Add new card"
                    android:textAllCaps="false"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerpay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/cardno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number"></EditText>

                <EditText
                    android:id="@+id/cardholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name of the card"></EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/datepay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Exipery date"></EditText>

                    <EditText
                        android:id="@+id/cvvnopay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="CVV no"></EditText>


                </LinearLayout>

                <Button
                    android:id="@+id/addcard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Save"></Button>


            </LinearLayout>


            <RadioButton
                android:id="@+id/UPI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPI Payment"></RadioButton>

            <RadioButton
                android:id="@+id/cashondelevery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash on delevery"></RadioButton>


        </RadioGroup>


        <TextView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleveropp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Order Summary"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <RelativeLayout
            android:id="@+id/totalrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/order"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sub Total"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/subtotal"
                android:gravity="right"
                android:text="$850"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/totalrow2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/totalrow"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Coupen Discount"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="$0"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/totalrow3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/totalrow2"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tax"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="$50"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/totalrow4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/totalrow3"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="$900"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/totalprise"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/total"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Total"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                ></TextView>
            <TextView
                android:id="@+id/prise"
                android:layout_toRightOf="@+id/total"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="$900"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                ></TextView>

            <Button
                android:id="@+id/paybutton"
                android:layout_width="213dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/squareorange"
                android:gravity="center"
                android:text="Pay Now"
                android:textAllCaps="false"
                android:textColor="@color/white"></Button>


        </RelativeLayout>


        <FrameLayout
            android:id="@+id/frmepay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>